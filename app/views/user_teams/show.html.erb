<div class="standings">






<table>
  <tr>
    <th> Name </th>
    <th> Position </th>
    <th> Goals </th>
    <th> Shots </th>
    <th> Assists </th>
  </tr>
  <% @user_team.players.each do |p| %>
  <tr>
  <th><%= link_to p.name, player_path(p) %></th>
  <th><%= p.position %></th>
  <th><%= p.goals(@user_team)%> </th>
  <th><%= p.shots(@user_team) %> </th>
  <th><%= p.assists(@user_team) %> </th>
  </tr>
  <% end %>
  <% if @user_team.user_id == session[:user_id] %>
  <%= link_to "Edit Team", edit_user_team_path(@user_team) %>
  <%= link_to "Delete this Team", @user_team, method: :delete %>
  <% end %>
</table>
</div>

<div class="matchright">
  <h1> <%= @user_team.name %> </h1>
<h2> created by: <%= link_to @user_team.user.name, user_path(@user_team.user)%> <h2>
  <h1> <%= @user_team.win_loss_record %> </h1>

</div>
