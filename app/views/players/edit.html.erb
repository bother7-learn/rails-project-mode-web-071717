<div class="bigleft">

<h1> Edit Your Player Here </h1>
<%= form_for @player, :html => {:id => "edit_player"} do |f| %>
<ul>
<% if !!flash[:message] %>
<% flash[:message].each do |message| %>
    <p style="color:red"><%= message %></p>
      <%end%>
      <%end%>
    </ul>
    <table>
      <tr>
<th style="text-align:left;"><%= f.label :name %></th>
<th><%= f.text_field :name %></th>
</tr>
<tr>
<th style="text-align:left;"><%= f.label :shooting %></th>
<th><%= f.number_field :shooting, max: 99, min: 0, onchange: "player_update()" %></th>
</tr>
<tr>
<th style="text-align:left;"><%= f.label :passing %></th>
<th><%= f.number_field :passing, max: 99, min: 0, onchange: "player_update()" %></th>
</tr>
<tr>
<th style="text-align:left;"><%= f.label :defense %></th>
<th><%= f.number_field :defense, max: 99, min: 0, onchange: "player_update()" %></th>
</tr>
<tr>
<th style="text-align:left;"><%= f.label :foul %></th>
<th><%= f.number_field :foul, max: 99, min: 1, onchange: "player_update()" %></th>
</tr>
<tr>
<th style="text-align:left;"><%= f.label :dribbling %></th>
<th><%= f.number_field :dribbling, max: 99, min: 0, onchange: "player_update()" %></th>
</tr>
<tr>
<th style="text-align:left;"><%= f.label :position %></th>
<th><%= f.select :position, [ 'forward','midfielder','defender','goalie' ], :prompt => 'Select One', onchange: "player_update()" %> </th>
</tr>
</table>
<%= hidden_field_tag :usersubmit, 0 %>
<p style="font-size:25px;text-align:right;">$<%= @player.contract %> Million </p>
<%= f.submit "Edit Player"%>
<% end %>

</div>
