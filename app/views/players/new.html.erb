<div class = "bigleft" >
<h1> Create Player Here </h1>
<%= form_for @player do |f| %>
<%if @player.errors.any? %>
<h2> Errors:</h2>
<ul>
<%@player.errors.full_messages.each do |message| %>
    <li style="color:red"><%= message %></li>
      <%end%>
    </ul>
    <%end%>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :shooting %>
<%= f.number_field :shooting, max: 99, min: 55 %><br>
<%= f.label :passing %>
<%= f.number_field :passing, max: 99, min: 55 %><br>
<%= f.label :defense %>
<%= f.number_field :defense, max: 99, min: 55 %><br>
<%= f.label :foul %>
<%= f.number_field :foul, max: 15, min: 5 %><br>
<%= f.label :dribbling %>
<%= f.number_field :dribbling, max: 99, min: 55 %><br>
<%= f.label :position %>
<%= f.select :position, [ 'forward','midfielder','defender','goalie' ], :prompt => 'Select One' %>
<%= f.submit %>
<% end %>
</div>
